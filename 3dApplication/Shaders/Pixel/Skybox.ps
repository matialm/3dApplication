struct Vertex
{
	float4 Position     : POSITION;
	float3 TexCoords    : TEXCOORD0;
};

Texture coloredTexture;

sampler TextureSampler = sampler_state
{ 
	texture = <coloredTexture>;
	magfilter = LINEAR;
	minfilter = LINEAR;
	mipfilter = LINEAR;
	AddressU = wrap;
	AddressV = wrap;
};

float4 TexturePixel(Vertex input) : COLOR0
{
	return texCUBE(TextureSampler, normalize(input.TexCoords));
}
